<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/twitter_blue</item>
        <item name="colorPrimaryVariant">@color/twitter_blue_30</item>
        <item name="colorOnPrimary">@color/light_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/medium_red</item>
        <item name="colorSecondaryVariant">@color/medium_red_30</item>
        <item name="colorOnSecondary">@color/twitter_blue_fill_pressed</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground" tools:targetApi="1">?attr/colorOnPrimary</item>

    </style>

</resources>
